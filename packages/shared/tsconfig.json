{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es6",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve"
    },
    "include": ["src"]
}
