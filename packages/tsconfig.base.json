{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "target": "ES2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "lib": ["es2015", "dom", "dom.iterable", "esnext"]
    }
}
